<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:text="tic\ntac\ntoe"
        android:fontFamily="@font/delius"
        android:textColor="@color/text_color"
        android:textSize="45dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPlayerVsPlayer"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/delius"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Player vs Player"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:background="@drawable/button_design"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/buttonPlayerVsComputer"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/delius"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Player vs Computer"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlayerVsPlayer"
        android:background="@drawable/button_design"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/delius"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Settings"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlayerVsComputer"
        android:background="@drawable/button_design"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/buttonAbout"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/delius"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="About"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSettings"
        android:background="@drawable/button_design"
        app:backgroundTint="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>